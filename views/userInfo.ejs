<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile - Nexus Events Co.</title>
    <link rel="stylesheet" href="/style/userInfo.css">

</head>

<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            
            <div class="logo-section">
                <img src="/img/logo.png" alt="Nexus Events Logo" class="logo">
                <div>
                    <div class="brand-name">Nexus Events Co.</div>
                    <div class="brand-tagline">Event Management</div>
                </div>
            </div>
            <div class="header-actions">
                <a href="/home" class="btn btn-dark">All Events</a>
                <form action="/logout" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-logout">Logout</button>
                </form>
            </div>
        </header>

        <!-- Main Content -->

        <!-- Profile Section -->
        <div class="profile-section">
            <div class="profile-header">
                <svg class="userLogo" width="40" height="40" viewBox="0 0 40 40"
                            xmlns="http://www.w3.org/2000/svg">
                            <!-- Simple person icon -->
                            <g fill="#6b7280">
                                <!-- Head -->
                                <circle cx="20" cy="14" r="5" />

                                <!-- Body -->
                                <path d="M 20 20 C 14 20 10 23 10 28 L 10 30 L 30 30 L 30 28 C 30 23 26 20 20 20 Z" />
                            </g>
                        </svg>
                <div class="profile-info">
                    <h2>
                        <%= user.name %>
                    </h2>
                    <p>Event Organizer</p>
                </div>
            </div>

            <div class="profile-details">
                <div class="detail-item">
                    <span class="detail-label">Email Address</span>
                    <span class="detail-value">
                        <%= user.email %>
                    </span>
                </div>

                
                <div class="detail-item">
                    <span class="detail-label">Member Since</span>
                    <span class="detail-value">
                        <%= new Date(user.createdAt).toLocaleDateString('en-US', { month: 'long' , year: 'numeric' }) %>
                    </span>
                </div>
            </div>
        </div>
        <br>
        <hr>
        <br>



        <!-- My Events Section -->
        <div class="events-section">
            <h2>My Events</h2>
            
            <% if (userEvents.length > 0) { %>
                <div class="events-grid">
                    <% userEvents.forEach(function(event) { %>
                        <div class="event-card">
                            <h3 class="event-title"><%= event.title %></h3>
                            
                            <div class="event-info">
                                <div class="event-info-item">
                                    📅 <%= new Date(event.date).toLocaleDateString('en-GB') %>
                                </div>
                                <div class="event-info-item">
                                    🕐 <%= event.time %>
                                </div>
                            </div>
                            
                            <p class="event-description"><%= event.description %></p>
                            
                            <div class="event-location">
                                <span>📍 <%= event.location %></span>
                            </div>
                            
                            <div class="event-info-item">
                                <span>💰 <%= event.price %></span>
                            </div>
                            
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="no-events">
                    <p>You haven't created any events yet.</p>
                    <a href="/events/new" class="btn btn-dark" style="margin-top: 1rem;">Create Your First Event</a>
                </div>
            <% } %>
        </div>
        <br><hr><br>



        <!-- M -->
        <div class="events-section">
            <h2>My Events</h2>
            
            <% if (userEvents.length > 0) { %>
                <div class="events-grid">
                    <% userEvents.forEach(function(event) { %>
                        <div class="event-card">
                            <h3 class="event-title"><%= event.title %></h3>
                            
                            <div class="event-info">
                                <div class="event-info-item">
                                    📅 <%= new Date(event.date).toLocaleDateString('en-GB') %>
                                </div>
                                <div class="event-info-item">
                                    🕐 <%= event.time %>
                                </div>
                            </div>
                            
                            <p class="event-description"><%= event.description %></p>
                            
                            <div class="event-location">
                                <span>📍 <%= event.location %></span>
                            </div>
                            
                            <div class="event-info-item">
                                <span>💰 <%= event.price %></span>
                            </div>
                            
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="no-events">
                    <p>You haven't created any events yet.</p>
                    <a href="/events/new" class="btn btn-dark" style="margin-top: 1rem;">Create Your First Event</a>
                </div>
            <% } %>
        </div>
        <br><hr><br>

    </div>
</body>

</html>