<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nexus Events Co. - Event Management</title>
    <link rel="stylesheet" href="/style/home.css">

</head>

<body>
    <div class="container">
        <!-- Header -->
        <header>
            <div class="logo-section">
                <img src="/img/logo.png" alt="Nexus Events Logo" class="logo">
                <div>
                    <div class="brand-name">Nexus Events Co.</div>
                    <div class="brand-tagline">Event Management</div>
                </div>
            </div>

            <!-- Search Section -->
            <div class="search-section">
                <div class="search-bar">
                    <input type="text" class="search-input" id="searchInput" placeholder="Search events...">
                    <button class="btn-search" onclick="handleSearch()">üîç</button>
                </div>
            </div>

            <div class="header-actions">
                <% if (user) { %>

                    <div class="user-info" onclick="userInfo(<%= user ? JSON.stringify(user) : 'null' %>)">
                        <svg class="userLogo" width="40" height="40" viewBox="0 0 40 40"
                            xmlns="http://www.w3.org/2000/svg">
                            <!-- Simple person icon -->
                            <g fill="#6b7280">
                                <!-- Head -->
                                <circle cx="20" cy="14" r="5" />

                                <!-- Body -->
                                <path d="M 20 20 C 14 20 10 23 10 28 L 10 30 L 30 30 L 30 28 C 30 23 26 20 20 20 Z" />
                            </g>
                        </svg>
                        <span class="user-name">
                            <%= user.name %>
                        </span>
                    </div>

                    <% } else { %>
                        <!-- User NOT signed in: show Sign Up and Add Event buttons -->
                        <button class="btn btn-signup" onclick="handleSignup()">Sign Up</button>

                        <% } %>

            </div>

            <div id="addEventSection" class="header-actions">
                <button class="btn btn-add-event" onclick="handleAddEvent()">+ Add New Event</button>
            </div>

        </header>

        <!-- Events Section -->
        <div class="events-section">
            <h2 class="section-title">Upcoming Events</h2>
            <div class="events-grid" id="eventsGrid">
                <% if (events && events.length> 0) { %>
                    <% events.forEach(event=> { %>


                        <div class="event-card" 
                            data-event-id="<%= event._id %>"
                            data-event-title="<%= event.title %>" 
                            data-event-description="<%= event.description %>"
                            data-event-date="<%= event.date %>"
                            data-event-time="<%= event.time %>" 
                            data-event-location="<%= event.location %>"
                            data-event-prize="<%= event.price || 'Free' %>" 
                            data-event-creator="<%= event.createdBy %>"
                            
                            userId="<%= user ? user._id : null %>" 
                            onclick="openEventModal(this)">



                            <div class="event-title">
                                <%= event.title %>
                            </div>
                            <div class="event-date">üìÖ <%= new Date(event.date).toLocaleDateString() %>
                            </div>
                            <div class="event-time">
                                ‚è∞
                                <%= new Date('1970-01-01T' + event.time).toLocaleTimeString('en-US', { hour: 'numeric' ,
                                    minute: '2-digit' , hour12: true }) %>
                            </div>

                            <div class="event-description">
                                <%= event.description %>
                            </div>
                            <div class="event-location">üìç <%= event.location %>
                            </div>
                            <div class="event-price">üí∞ <%= event.price || 'Free' %>
                            </div>
                        </div>
                        <% }); %>
                            <% } else { %>
                                <p class="no-events">No events found</p>
                                <% } %>
            </div>
        </div>
    </div>

    <!-- Event Modal Partial -->
    <%- include('partials/eventModal') %>

        <script>
            var user = <% - JSON.stringify(user || null) %>
            
            console.log('User Data:', user); // Debug log
            



            async function handleSignup() {
                try {
                    const response = await fetch('/login', {
                        method: 'GET',
                    });

                    if (response.ok) {
                        window.location.href = response.url;
                    } else {
                        alert('Failed to initiate Google Sign-In.');
                    }
                } catch (error) {
                    console.error('Error during Google Sign-In:', error);
                    alert('An error occurred. Please try again later.');
                }


            }

            function handleAddEvent() {
                alert('Add New Event - This would open an event creation form');
                window.location.href = "/add-event";
            }

            function handleSearch() {
                const searchTerm = document.getElementById('searchInput').value.toLowerCase();
                const eventCards = document.querySelectorAll('.event-card');
                let foundCount = 0;

                eventCards.forEach(card => {
                    const text = card.textContent.toLowerCase();
                    if (text.includes(searchTerm)) {
                        card.style.display = 'block';
                        foundCount++;
                    } else {
                        card.style.display = 'none';
                    }
                });

                if (foundCount === 0 && searchTerm !== '') {
                    alert('No events found matching your search.');
                }
            }

            async function userInfo(user) {
                if (!user) {
                    alert('Please log in to view your profile.');
                    return;
                }
                window.location.href = "/user-info";

            }

            // Allow search on Enter key
            document.getElementById('searchInput').addEventListener('keypress', function (e) {
                if (e.key === 'Enter') {
                    handleSearch();
                }
            });


        </script>
</body>

</html>